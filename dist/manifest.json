{
  "name": "Signal",
  "version": "0.0.1",
  "description": "Removes addictive UI patterns from the most popular websites.",
  "manifest_version": 2,

  "permissions": ["alarms", "storage", "tabs", "webNavigation"],

  "content_scripts": [
    {
      "matches": [
        "*://*.twitter.com/*",
        "*://*.facebook.com/*",
        "*://*.linkedin.com/*",
        "*://*.youtube.com/*"
      ],
      "run_at": "document_idle",
      "js": ["build/content.js"],
      "css": ["style.css"]
    }
  ],

  "background": {
    "scripts": ["build/background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png",
    "24": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
