{
  "name": "Signal",
  "version": "0.0.1",
  "description": "Eliminate distractions.",
  "manifest_version": 2,
  "options_page": "options.html",

  "permissions": [
    "tabs",
    "storage",
    "webNavigation",
    "declarativeContent",
    "identity",
    "identity.email"
  ],

  "content_security_policy": "script-src 'self' https://connect.facebook.net; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "*://*.twitter.com/*",
        "*://*.facebook.com/*",
        "*://*.linkedin.com/*",
        "*://*.youtube.com/*",
        "*://*.reddit.com/*"
      ],
      "run_at": "document_idle",
      "js": ["build/content.js"],
      "css": ["css/style.css"]
    }
  ],

  "background": {
    "scripts": ["build/background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png",
    "24": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
