{
  "name": "Signal",
  "version": "1.0",
  "description": "Make life good",
  "manifest_version": 2,
  "options_page": "options.html",

  "permissions": [
    "<all_urls>",
    "tabs",
    "storage",
    "webNavigation",
    "identity",
    "identity.email"
  ],

  "content_security_policy": "script-src 'self' https://connect.facebook.net; object-src 'self'",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_idle",
      "js": ["build/content.js"]
    }
  ],

  "background": {
    "scripts": ["build/background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  }
}
